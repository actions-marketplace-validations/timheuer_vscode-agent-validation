{
    "name": "validate-vscode-custom-agent",
    "version": "0.1.0",
    "description": "GitHub Action to validate .agent.md files against the VS Code custom agent specification",
    "keywords": [
        "vscode",
        "copilot",
        "github-action",
        "agent-md",
        "validation",
        "custom-agents"
    ],
    "homepage": "https://github.com/timheuer/vscode-agent-validation",
    "bugs": {
        "url": "https://github.com/timheuer/vscode-agent-validation/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Tim Heuer",
        "url": "https://github.com/timheuer"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/timheuer/vscode-agent-validation.git"
    },
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "ncc build src/index.ts -o dist",
        "test": "tsx test/test.ts",
        "type-check": "tsc --noEmit",
        "lint": "biome check .",
        "format": "biome format --write ."
    },
    "dependencies": {
        "@actions/core": "^1.11.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/node": "^22.10.2",
        "@vercel/ncc": "^0.38.3",
        "js-yaml": "^4.1.0",
        "@types/js-yaml": "^4.0.9",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    }
}
